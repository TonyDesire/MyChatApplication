<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.xyah.mychatapplication.ViewProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewProfileActivity_photoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/viewProfileActivity_firstNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="firstName"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_middleNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_secondNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="secondName"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewProfileActivity_messageButton"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_ripple_button_background"
                    android:text="Message" />

                <LinearLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/viewProfileActivity_addToFriendButton"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_ripple_button_background"
                    android:text="Add To Friend"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Age:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_ageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Gender:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_genderTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Phone Number:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_phoneTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Nationality:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_nationalityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="State:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_stateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="City:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_cityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Address:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_addressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Email:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_emailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Faculty:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/viewProfileActivity_facultyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Not indicated"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
